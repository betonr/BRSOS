    "name": "Documentation of API BRSOS",
    "template": {
      "forceLanguage": "en"
    }
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "consign": "^0.1.6",
    "cors": "^2.8.4",
    "express": "^4.15.3",
    "express-validation": "^1.0.2",
    "formidable": "^1.2.1",
    "helmet": "^3.9.0",
    "joi": "^13.0.1",
    "jsonwebtoken": "^8.0.0",
    "mongodb": "^3.0.2",
    "mongoose": "^5.0.6",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "url": "^0.11.0",
    "winston": "^3.0.0-rc3",
    "apidoc": "^0.15.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1"
