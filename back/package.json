{
  "name": "brsos",
  "version": "0.0.1",
  "description": "API BRSOS",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js --exec babel-node --presets es2015,stage-2",
    "start": "npm run docs && npm run clusters",
